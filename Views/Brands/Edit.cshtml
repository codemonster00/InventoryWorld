@model InventoryWorld.Models.Brands

@{
    ViewData["Title"] = "Edit";
}

<div class="box">
    <div class="box-header">
        <h2>Edit</h2>
    </div>

 <div class="box-body">
<h4>Brands</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Brands.StatusType>()" class=" form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>