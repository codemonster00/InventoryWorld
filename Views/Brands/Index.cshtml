@model IEnumerable<InventoryWorld.Models.Brands>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">
        <input type="button" class="btn btn-primary" value="Create" />
    </a>
</p>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">All Brands</h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
                  
            <td>
                           
                @Html.DisplayFor(modelItem => item.Status)
                            @if (item.Status==0)
                            {
                               
                                    <span style="color:green">●</span>
                              
                            }

                            else
                            {
                                <span style="color:red">●</span>
                                }
                           
            </td>
                       
            <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"> <i class="fa fa-edit"></i>Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>